	number = {3},
	urldate = {2020-05-01},
	journal = {Neurología (English Edition)},
	author = {García-Casares, N. and Berthier Torres, M. L. and Froudist Walsh, S. and González-Santos, P.},
	month = apr,
	year = {2013},
	keywords = {Amusia, Brain and music, Cerebro y música, Cognición musical, Memoria musical, Music cognition, Musical memory, Musical neuroscience, Musical perception, Musical rehabilitation, Neurociencia de la música, Percepción musical, Rehabilitación y música},
	pages = {179--186},
