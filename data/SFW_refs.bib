	journal = {Cortex},
	author = {Tuomiranta, Leena M. and Càmara, Estela and Froudist Walsh, Seán and Ripollés, Pablo and Saunavaara, Jani P. and Parkkola, Riitta and Martin, Nadine and Rodríguez-Fornells, Antoni and Laine, Matti},
	month = jan,
