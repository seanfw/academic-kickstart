@article{karolisReinforcementBrainRichClub2016,
	title = {Reinforcement of the {Brain}'s {Rich}-{Club} {Architecture} {Following} {Early} {Neurodevelopmental} {Disruption} {Caused} by {Very} {Preterm} {Birth}},
